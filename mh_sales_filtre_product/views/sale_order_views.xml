<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_bouton_form" model="ir.ui.view">
            <field name="name">sale order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='sale_header']/group/field[@name='partner_shipping_id']" position="after">
                    <field name="show_all_products" widget="boolean_toggle" /> 
                </xpath>
              
                 <!-- <xpath expr="//notebook/page/field/form/group/group/div[@class='d-flex align-items-baseline']/field[@name='product_id']" position="after">
                    <field name="produit_available_ids"/>
                    
                </xpath>  -->
                <xpath expr="//field[@name='product_template_id']" position="replace">
                    <field name="product_template_id" string="Product" readonly="id and not product_updatable" required="not display_type and not is_downpayment" 
                    context="{'partner_id': parent.partner_id,'quantity': product_uom_qty,'pricelist': parent.pricelist_id,'uom':product_uom, 'company_id': parent.company_id, 'default_list_price': price_unit, 'default_uom_id': product_uom}" options="{ 'no_open': True}" optional="show"
                        domain="[
                            ('sale_ok', '=', True),
                           
                            ('type', '!=', 'product'),
                        
                            ('virtual_available', '>', 0),
                            (parent.show_all_products, '=', True),
                        ]"
                        widget="sol_product_many2one" placeholder="Type to find a product..."/>
                </xpath> 
               
            </field>
        </record>
    </data>
</odoo>