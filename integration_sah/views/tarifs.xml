

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sah_integration_price_list_view_tree" model="ir.ui.view">
            <field name="name">sah.integration.price.list.view.tree</field>
            <field name="model">product.pricelist.item</field>
            <field name="inherit_id" ref="product.product_pricelist_item_tree_view_from_product"/>
            <field name="arch" type="xml">
               <field name="pricelist_id" position="after">
                    <field name="country_id"/>
                </field>
            </field>
        </record>

        <record id="sah_integration_price_list_view_form" model="ir.ui.view">
            <field name="name">sah.integration.price.list.view.form</field>
            <field name="model">product.pricelist.item</field>
            <field name="inherit_id" ref="product.product_pricelist_view"/>
            <field name="arch" type="xml">
               <field name="country_group_ids" position="replace">
                    <field name="country_id"/>
                </field>
            </field>
        </record>

    </data>
</odoo>