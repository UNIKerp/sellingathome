<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_bouton_form" model="ir.ui.view">
            <field name="name">sale order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='sale_header']/group/field[@name='partner_shipping_id']" position="after">
                    <field name="show_all_products" widget="boolean_toggle" string="Show All Products"/> 
                </xpath>
                <xpath expr="//notebook/page/field/form/group/group/div[@class='d-flex align-items-baseline']/field[@name='product_id']" position="replace">
                     <field name="product_id"
                    domain="[
                        '|',
                        ('type', '!=', 'product'),
                        '|',
                        ('show_all_products', '=', True),
                        ('virtual_available', '>', 0)
                    ]"/>
                </xpath> 
                
               
            </field>
        </record>
    <record id="sale_order_line_product_domain" model="ir.ui.view">
        <field name="name">sale.order.line.product.domain</field>
        <field name="model">sale.order.line</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']" position="after">
                <field name="show_all_products"/>
            </xpath>
        </field>
    </record>

    </data>
</odoo>