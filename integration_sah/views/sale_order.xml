<odoo>
    <data>
        <record id="sale_order_form_inherit_show_all_products" model="ir.ui.view">
            <field name="name">sale.order.form.inherit.show_all_products</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='sale_header']" position="inside">
                    <field name="show_all_products" widget="boolean_toggle"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
