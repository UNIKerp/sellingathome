<odoo>
    <!-- Action liée au wizard -->
    <record id="action_account_commission_wizard" model="ir.actions.act_window">
        <field name="name">Importer Commissions</field>
        <field name="res_model">account.commission.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu dans Comptabilité > Comptabilité -->
    <menuitem id="menu_account_commission_import"
              name="Importer commissions"
              parent="account.menu_finance_entries"
              action="action_account_commission_wizard"
              sequence="90"
              groups="account.group_account_user"/>
</odoo>
